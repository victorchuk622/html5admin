<% var title = 'Add Assignment' %>
<% include head %>
<!--css insert here-->
<link href="/css/bootstrap-datetimepicker.min.css" rel="stylesheet">
</head>
<body>
<div class="container-fluid">
    <% include navbar %>
    <div class="container responsive">
        <h1><%= title %></h1>
        <div class="container">
            <form id="addAssignment" role="form" action="/admin/addAssignment" method="post">

            <fieldset class="form-group">
                <br/>
                <input type="text" class="form-control" id="title"
                       name="title" placeholder="Title"  required>
                <br/>

                <div class="row">
                    <div class='col-sm-6'>
                        <div class="form-group">
                            <div class='input-group date' id='datetimepicker1'>
                               <input type='text' placeholder="Deadline" name="deadline" class="form-control"/ >
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                            </div>
                        </div>
                    </div>
                </div>


                    <textarea class="form-control" id="info" name="info"
                              placeholder="Description" required></textarea>
            </fieldset>
            <ul class="nav nav-tabs">
                <li id="li-q1" class="active"><a data-toggle="tab" href="#tab-q1">Q 1</a></li>
                <li><a onclick="addquestion()" href="#">+</a></li>
            </ul>


                <div class="tab-content">

                    <!--    -->

                    <div id="tab-q1" class="tab-pane fade in active">

                        <h3>Question 1</h3>
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#mc-q1">Multiple Choices</a></li>
                            <li><a data-toggle="tab" href="#fitb-q1">Fill in the Blank</a></li>
                        </ul>
                        <div class="tab-content">
                            <fieldset class="form-group">
                                <br/>
                    <textarea class="form-control" id="content[0][question]" name="content[0][question]"
                              placeholder="Question" required></textarea>
                            </fieldset>
                            <br/>
                            <input type="hidden" class="form-control" id="content[0][questionNo] " name="content[0][questionNo]"
                                   value="1">

                            <div id="mc-q1" class="tab-pane fade in active question-answer">
                                <input type="hidden" class="form-control" id="content[0][qType]" name="content[0][qType]"
                                       value="mc">
                                <div class="input-group">
      <span class="input-group-addon">
        <input type="checkbox" id="content[0][ans][0][correct]" name="content[0][ans][0][correct]" value="true">
      </span>
                                    <input type="text" class="form-control" id="content[0][ans][0][content]"
                                           name="content[0][ans][0][content]" placeholder="Answer"  required>
                                </div>
                                <br/>
                                <div class="input-group">
      <span class="input-group-addon">
        <input type="checkbox" id="content[0][ans][1][correct]" name="content[0][ans][1][correct]" value="true" >
      </span>
                                    <input type="text" class="form-control" id="content[0][ans][1][content]"
                                           name="content[0][ans][1][content]" placeholder="Answer"  required>
                                </div>

                                <br/>
                                <div class="input-group">
      <span class="input-group-addon">
        <input type="checkbox" id="content[0][ans][2][correct]" name="content[0][ans][2][correct]" value="true" >
      </span>
                                    <input type="text" class="form-control" id="content[0][ans][2][content]"
                                           name="content[0][ans][2][content]" placeholder="Answer"  required>
                                </div>
                                <br/>
                                <div class="input-group">
      <span class="input-group-addon">
        <input type="checkbox" id="content[0][ans][3][correct]" name="content[0][ans][3][correct]" value="true" >
      </span>
                                    <input type="text" class="form-control" id="content[0][ans][3][content]"
                                           name="content[0][ans][3][content]" placeholder="Answer"  required>
                                </div>
                                <br/>
                            </div>

                            <div id="fitb-q1" class="tab-pane fade question-answer">
                                <input type="hidden" class="form-control" id="content[0][qType]" name="content[0][qType]"
                                       value="fitb">
                                <p>
                                    <input type="text" class="form-control" id="content[0][ans][0][content]" name="content[0][ans][0][content]" placeholder="Answer">
                                    <input type="hidden" class="form-control" id="content[0][ans][0][correct]" name="content[0][ans][0][correct]"
                                           value="true">
                                </p>

                            </div>
                        </div>
                    </div>

                    <!--    -->


                </div>
                <button type="submit" class="btn btn-default">Create</button>
            </form>
        </div>
    </div>
</div>
<% include foot %>
<script src="/js/moment.min.js"></script>
<script src="/js/bootstrap-datetimepicker.min.js"></script>
<script src="/js/addAssignment.js"></script>
</body>
</html>