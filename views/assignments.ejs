<% var title = 'Assignments' %>
<% include head %>
<!--css insert here-->
</head>
<body>
<div class="container-fluid">
    <% include navbar %>
    <div class="container responsive">
        <h1><%= title %></h1>

        <div class="container table-responsive">

            <div class="table-responsive">
                <table class="table table-condensed">
                    <tr>
                        <th>Title</th>
                        <th>Info</th>
                        <th>Create</th>
                        <th>Deadline</th>
                        <th>Submitted</th>
                        <th> </th>
                    </tr>
                    <% assignments.forEach(function(assignment,index) { %>
                    <tr>
                        <td class="col-md-1"><%= assignment.title %></td>
                        <td class="col-md-1"><%= assignment.info%></td>
                        <td class="col-md-1"><%= assignment.create.getFullYear() + '-' + assignment.create.getMonth() + '-' + assignment.create.getDay() + ' '  + assignment.create.getHours() + ':' + assignment.create.getMinutes() + ':' + assignment.create.getSeconds()  %></td>
                        <td class="col-md-1"><%= assignment.deadline.getFullYear() + '-' + assignment.deadline.getMonth() + '-' + assignment.deadline.getDay() + ' '  + assignment.deadline.getHours() + ':' + assignment.deadline.getMinutes() + ':' + assignment.deadline.getSeconds()  %></td>
                        <td class="col-md-1"><%= submitted[index]%></td>
                        <td class="col-md-1"><a href="./deleteAssignment/<%= assignment.id %>">Delete Assignment</a></td>
                    </tr>
                    <% }); %>
                </table>
            </div>
        </div>










    </div>
</div>
<% include foot %>
</body>
</html>