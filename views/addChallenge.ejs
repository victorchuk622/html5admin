        <input type="hidden" class="form-control" id="teamID" name="teamID"
               value=<%= teamID%>>
        <input type="hidden" class="form-control" id="token" name="token"
               value=<%= token%>>
        <div class="tab-content">
            <% include tab-q1 %>

        </div>
        <button type="submit" class="btn btn-default">Create</button>
    </form>
</div>
